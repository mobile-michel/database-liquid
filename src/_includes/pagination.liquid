<nav aria-label="Pagination">
    <p>
    {%- assign previousPost = collections.allFilters | getPreviousCollectionItem %}
    {%- assign nextPost = collections.allFilters | getNextCollectionItem %}
    {%- if nextPost or previousPost %}
    {%- if previousPost %}Previous article: <a role="button" href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
    {%- endif %}
    {%- if nextPost %}
    Next article: <a role="button" href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
    {%- endif %}
    {%- endif %}</p>
</nav>